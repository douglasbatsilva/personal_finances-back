<%- include('partials/header.ejs'); %>
<body class="initial">
	<%- include('partials/navbar.ejs'); %>
	<div class="container home">
		<div class="container col-md-4">
			<% if(notify.length > 0) { %>
				<div class="alert alert-success text-center" role="alert"> <%= notify %> </div>
			<% } %>	
			<div class="card-body">
				<h3 class="d-flex justify-content-center text-light">Acesse Suas Finanças</h3>	
				<form method="POST" action="/signin">	
					<input class="form-control margin" type="email" name="email" placeholder="E-mail ou Usuário">
					<input class="form-control margin" type="password" placeholder="Senha" name="password" id="article">
					<div class="d-flex justify-content-center">
						<button class="btn btn-primary margin justify-content-center">Login</button>
					</div>
				</form>
			</div>
		</div>
	</form>
</body>
<%- include('partials/footer.ejs'); %>